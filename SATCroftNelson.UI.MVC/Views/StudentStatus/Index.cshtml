@model IEnumerable<SATCroftNelson.DATA.EF.StudentStatus>

@{
    ViewBag.Title = "Student Statuses";
}

<div class="container">
    <h2>@ViewBag.Title</h2>

    <p>
        @* Below is a navigation link to the Grid Layout *@
        <a href="@Url.Action("IndexTiles", "StudentStatus")" class="pull-right btn btn-warning">Grid View</a>
    </p>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SSName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SSDescription)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SSName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SSDescription)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SSID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.SSID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SSID })
                </td>
            </tr>
        }

    </table>
</div>
