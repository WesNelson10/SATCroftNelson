<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Midwest Learning | @ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <!-- TEMPLATE CSS FILE -->
    @Styles.Render("~/Content/css")
    <!-- CUSTOM CSS FILE -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="@Url.Action("Index", "Home")">Midwest Learning</a>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
        </form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">

                    @Html.Partial("_LoginPartial")

                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        @if (User.IsInRole("Admin") && Request.IsAuthenticated)
                        {
                            <div class="sb-sidenav-menu-heading">Admin</div>
                            <a class="nav-link" href="@Url.Action("Index", "UsersAdmin")">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Manage Users
                            </a>
                            <a class="nav-link" href="@Url.Action("Index", "RolesAdmin")">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Manage Roles
                            </a>
                            <a class="nav-link" href="@Url.Action("Index", "StudentStatus")">
                                <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                                Student Statuses
                            </a>
                            <a class="nav-link" href="@Url.Action("Active", "Courses")">
                                <div class="sb-nav-link-icon"><i class="fas fa-book"></i></div>
                                Courses
                            </a>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("Scheduling") && Request.IsAuthenticated)
                        {
                            <div class="sb-sidenav-menu-heading">Scheduling</div>
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapsePages" aria-expanded="false" aria-controls="collapsePages">
                                <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                                Enrollment
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapsePages" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages">
                                    <a class="nav-link" href="@Url.Action("Index", "Enrollments")">Dashboard</a>
                                    <a class="nav-link" href="@Url.Action("Create", "Enrollments")">Create</a>
                                </nav>
                            </div>
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapsePages" aria-expanded="false" aria-controls="collapsePages">
                                <div class="sb-nav-link-icon"><i class="fas fa-apple-alt"></i></div>
                                Scheduled Classes
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapsePages" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages">
                                    <a class="nav-link" href="@Url.Action("Index", "ScheduledClasses")">Dashboard</a>
                                    <a class="nav-link" href="@Url.Action("Create", "ScheduledClasses")">Create</a>
                                </nav>
                            </div>
                            <a class="nav-link" href="@Url.Action("Index", "Students")">
                                <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                                Students
                            </a>
                        }
                        <div class="sb-sidenav-menu-heading">Site Links</div>
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Home
                        </a>
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-envelope"></i></div>
                            Contact
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">

                        @if (Request.IsAuthenticated)
                        {
                            <div>Logged in as:<br />@User.Identity.Name</div>
                        }
                        else
                        {
                             <div>Not currently logged in.</div>
                        }

                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4 text-center">SAT Tool</h1>
                        <div class="col-xl-3 col-md-6">

                        </div>
                </div>
            </main>

            @RenderBody()

            <footer class="py-4 mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-white">Copyright &copy; Carter Croft & Wes Nelson @DateTime.Now.Year</div>
                        <div>
                            <a href="~/Content/SATDocumentation.pdf" target="_blank">SAT Tool Documentation</a>
                            &middot;
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/Scripts/js")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/Scripts/js/datatables-simple-demo.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
